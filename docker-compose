version: "3.9"

services:
  db:
    image: postgres:15
    container_name: postgres_datasus
    restart: always
    environment:
      POSTGRES_USER: ${POSTGRES_USER}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
      POSTGRES_DB: ${POSTGRES_DB}
    ports:
      - "5432:5432"
    volumes:
      - pgdata:/var/lib/postgresql/data
    networks:
      - datasus_net

  api:
    build: .
    container_name: pipeline_datasus_api
    command: uvicorn app.main:app --host 0.0.0.0 --port 8000 --reload
    volumes:
      - .:/code
    ports:
      - "8000:8000"
    environment:
      - DATABASE_HOST=db
      - DATABASE_PORT=5432
      - DATABASE_USER=${POSTGRES_USER}
      - DATABASE_PASSWORD=${POSTGRES_PASSWORD}
      - DATABASE_NAME=${POSTGRES_DB}
      - FTP_HOST=${FTP_HOST}
      - FTP_USER=${FTP_USER}
    depends_on:
      - db
    networks:
      - datasus_net

volumes:
  pgdata:

networks:
  datasus_net:
